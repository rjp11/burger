<h1>Chicago's Best Burger Checklist</h1>

<h2>"To Eat" List</h2>

<ul>
    
    {{#each burgers}} 
        {{#unless devoured}}
            <div>
                {{this.burger_name}}
                <button class="btn devourIt" type="submit" id="{{this.id}}" >DEVOUR</button>
            </div>
        {{/unless}} 
    {{/each}}
</ul>

<h2>Consumed Burgers</h2>

<ul>
    {{#each burgers}} 
        {{#if devoured}} 
            <div>
                {{burger_name}} 
            </div>
        {{/if}} 
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="newBurgerForm" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>